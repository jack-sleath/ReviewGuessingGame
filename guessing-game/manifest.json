{
    "manifest_version":  3,
    "name":  "LetterBoxd Review Guesser",
    "version":  "25.11.26.2056",
    "description":  "Guess the movie from a Letterboxd review — read a review snippet and pick the film. Fast, single-player quiz.",
    "icons":  {
                  "16":  "icons/icon16.png",
                  "32":  "icons/icon32.png",
                  "48":  "icons/icon48.png",
                  "128":  "icons/icon128.png"
              },
    "action":  {
                   "default_title":  "LetterBoxd Review Guesser",
                   "default_icon":  {
                                        "16":  "icons/icon16.png",
                                        "32":  "icons/icon32.png",
                                        "48":  "icons/icon48.png"
                                    }
               },
    "content_scripts":  [
                            {
                                "matches":  [
                                                "*://letterboxd.com/*/list/*"
                                            ],
                                "js":  [
                                           "guessing-game-core.js",
                                           "guessing-game-ui.js",
                                           "guessing-game-scraper.js",
                                           "guessing-game-game.js",
                                           "guessing-game-bootstrap.js"
                                       ]
                            }
                        ]
}
